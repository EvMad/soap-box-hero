<div class="container">
        <div class="row">

            <!--empty column-->
            <div class="col-3">
              {{!-- <h2>Left Side Filler</h2> --}}
            </div>

            <div class="col-6"> 

                <!--hard coded column start-->
                <div class="card text-center" style="width: 36rem;">
                <div class="card-body">
                  <h1 class="card-title">Welcome to the Soap Box</h1>
                  <p class="card-text">Login to read, post, and comment!</p>
                </div>
                <ul class="list-group list-group-flush">
                </ul> 
              </div>
     <!--hard coded column end-->

      <!--partial generated columns start-->
            {{#each allPosts as |post| }}
            <div class="card" style="width: 36rem;">
              <div class="card-body">
                <h4 class="card-title"><span class="display-6">{{title}}</span> by: {{user.name}}</h4>
                <p class="card-text">{{content}}</p>
              </div>
              {{!--comment post--}}
                <div class="has-text-black">
      <h6 class="is-size-2 is-underlined">
        Comments
      </h6>
               {{#each comments as |comment|}}
        
          <ul class="list-group list-group-flush"></ul>
          <li>
          <strong>{{comment.message}} </strong> 
          </li>
          </ul> 
          {{/each}}
            </div>
       
              
                
                 {{!-- comment form --}}
    <form class="comment-form">
    
      <div class="field">
        <p class="control">
          <textarea class="textarea is-primary" type="text" id="comment" data-post-id="{{id}}"
            placeholder="Type your comment here..."></textarea>
        </p>
      </div>
      <div class="field">
        <p class="control">
          <button class="button is-primary" type="submit">
            Post Comment
          </button>
        </p>
      </div>
    </form>
            {{/each}}
            <!--partial generated columns end-->

            <!--end card column-->
        </div>

         <!--empty column-->
         <div class="col-3">
           {{!-- <h2>Right Side Filler</h2> --}}
         </div>
           
         <!--end row-->
        </div>
        <!--end container-->
    </div>

    <script src="commentHandler.js"></script>